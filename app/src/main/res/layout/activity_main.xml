<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
            android:id="@+id/shelf_letters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/alpha"
            android:fontFamily="sans-serif"
            android:hint="shelf letters"
            android:inputType="text"
            android:maxLength="7"
            android:textColor="#6a0dad"
            android:textSize="50sp"
            android:translationY="200px" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="200px">

        <ImageView
                android:id="@+id/tile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/tile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/tile3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/tile4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/tile5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/tile6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/tile7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />
    </LinearLayout>

    <EditText
            android:id="@+id/other_letters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/alpha"
            android:fontFamily="sans-serif"
            android:hint="other letters"
            android:inputType="text"
            android:maxLength="3"
            android:textColor="#6a0dad"
            android:textSize="50sp"
            android:translationY="200px" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="200px">

        <ImageView
                android:id="@+id/extra_tile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/extra_tile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />

        <ImageView
                android:id="@+id/extra_tile3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a"
                android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="200px">

        <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's a go" />

        <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset" />
    </LinearLayout>
</LinearLayout>
